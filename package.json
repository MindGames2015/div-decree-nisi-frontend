{
  "name": "divorce-frontend-boilerplate",
  "description": "Divorce frontend boilerplate",
  "version": "0.0.1",
  "engines": {
    "node": ">=8.11.2"
  },
  "scripts": {
    "start": "NODE_PATH=. node server.js",
    "setup": "NODE_PATH=.",
    "dev": "NODE_PATH=. NODE_ENV=development node-dev server.js",
    "test": "NODE_PATH=. NODE_ENV=testing nyc --reporter=text mocha 'test/unit/**/*.js'",
    "test:unit": "NODE_PATH=. NODE_ENV=testing nyc --reporter=text mocha 'test/unit/**/*.js'",
    "test:e2e": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=OFF codeceptjs run -c test/e2e/codecept.conf.js --steps --invert",
    "test:coverage": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=OFF istanbul cover _mocha 'test/unit/**/*.js' -- --recursive --timeout 10000",
    "posttest:coverage": "istanbul check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "test:a11y": "NODE_PATH=. NODE_ENV=testing nyc --reporter=text-summary mocha 'test/unit/**/*.js'",
    "test:nsp": "NODE_PATH=. NODE_ENV=testing nyc --reporter=text-summary mocha 'test/unit/**/*.js'",
    "sonar-scan": "node_modules/sonar-scanner/bin/sonar-scanner",
    "sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner",
    "test:smoke": "NODE_PATH=. NODE_ENV=testing nyc --reporter=text-summary mocha 'test/unit/**/*.js'",
    "test:functional": "NODE_PATH=. NODE_ENV=testing nyc --reporter=text-summary mocha 'test/unit/**/*.js'",
    "lint": "eslint ."
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hmcts/look-and-feel": "^1.13.2",
    "@hmcts/nodejs-healthcheck": "^1.4.6",
    "@hmcts/nodejs-logging": "https://github.com/hmcts/nodejs-logging#771bb219e86d79d999d7edb17b10c69194d614fd",
    "@hmcts/one-per-page": "https://github.com/hmcts/one-per-page#7b3098ec0983996dde3baf914f1ce915f7d4ec4d",
    "copy-webpack-plugin": "^4.5.1",
    "express": "^4.16.3",
    "glob": "^7.1.2",
    "helmet": "^3.12.0",
    "i18next": "^11.3.1",
    "ioredis": "^3.2.2",
    "joi": "^13.3.0",
    "moment": "^2.22.1",
    "os": "^0.1.1",
    "paths": "^0.1.1",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "@hmcts/div-idam-test-harness": "https://github.com/hmcts/div-idam-test-harness.git",
    "@hmcts/one-per-page-test-suite": "https://github.com/hmcts/one-per-page-test-suite.git#05c6900e49b95b2aab47c28658dc0eb329a09c12",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-jq": "^0.0.9",
    "codeceptjs": "^1.1.8",
    "domino": "^2.0.2",
    "eslint": "^4.19.1",
    "eslint-plugin-mocha": "^5.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.0",
    "mochawesome": "^3.0.2",
    "node-dev": "^3.1.3",
    "nyc": "^11.7.2",
    "pa11y": "^5.0.3",
    "puppeteer": "^1.4.0",
    "randomstring": "^1.1.5",
    "require-directory": "^2.1.1",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "sonar-scanner": "^3.1.0",
    "supertest": "^3.0.0",
    "zepto-node": "^1.0.0"
  }
}
